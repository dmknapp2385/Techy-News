

{{#if posts.length}}
<section class="post-list">
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/edit/{{post.id}}" class="edit-link black">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

  <div class="new-post-button">
        <button type="submit" class="btn"><a class="black" href="/newpost">Add a Post</a></button>
  </div>
